extends layout

block header
		link(rel="stylesheet", href="/stylesheets/flex-controls.css")
		link(rel="stylesheet", href="/stylesheets/grid-content.css")
		script(src="/scripts/grid-content.js")

block content
	form(action=`/calendar/edit/${event._id}` method="POST")
		div.content
			h1#heading Edit Event
			include event.pug
		div.controls
			div.submit
				button(type="submit") Submit
