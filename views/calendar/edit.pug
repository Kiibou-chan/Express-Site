extends ../layout

block content
  form(action=`/todo/edit/${event._id}` method="POST")
    h1 Edit Event
    div
        span Time:
        input(type="time" placeholder="time" name="time" value=`${event.time}` required="true")
    div
        span Event: 
        input(type="text" placeholder="event" name="event" value=`${event.event}` required="true")
    button(type="submit") Submit