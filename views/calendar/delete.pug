extends ../layout

block content
    h1 Delete Event
    h4 Are you sure you want to delete this Event?
    form(method="POST")
        div
            input(hidden="true" type="text" name="_id" value=`${event._id}`)
            div
                span ID: 
                span #{event._id}
            div
                span Name: 
                span #{event.name}
            div
                span Time: 
                span #{event.time}
            div
                span Detail:
                span #{event.detail}
        button(type="submit") Delete
    a(href="/calendar")
        input(type="button", value="Go Back")