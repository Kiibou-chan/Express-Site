extends ../layout

block content
    h1 Delete Event
    h4 Are you sure you want to delete this Event?
    form(method="POST")
        div
            input(hidden="true" type="text" name="_id" value=`${event._id}`)
            p ID:
                span #{event._id}
            p Time:
                span #{event.time}
            p event:
                span #{event.event}
        button(type="submit") Delete
    a(href="/todo/list")
        input(type="button", value="Go Back")