extends ../layout

block content
    h1 Delete Item
    h4 Are you sure you want to delete this Item?
    form(method="POST")
        div
            input(hidden="true" type="text" name="_id" value=`${item._id}`)
            p ID:
                span #{item._id}
            p Time:
                span #{item.time}
            p Item:
                span #{item.item}
        button(type="submit") Delete
    a(href="/todo/list")
        input(type="button", value="Go Back")